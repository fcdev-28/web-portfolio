<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="{{ asset('images/id.png') }}">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <div class="wrapper">
            <nav class="navbar">
                <a href="{{ path('home') }}" class="logo">
                    <span class="logo-id">ID</span>
                    <span class="logo-text">InnovaDev</span>
                </a>

                <section class="menu-toggle">
                    <label for="menu-checkbox"><span>&#9776;</span></label>
                    <input type="checkbox" id="menu-checkbox">
                </section>

                <div class="nav-links">
                    <a href="{{ path('home') }}" {% if app.request.get('_route') matches '/^home/' %}class="active"{% endif %}>Inicio</a>
                    <a href="{{ path('about') }}" {% if app.request.get('_route') matches '/^about/' %}class="active"{% endif %}>Sobre Nosotros</a>
                    <a href="{{ path('projects') }}" {% if app.request.get('_route') matches '/^projects/' %}class="active"{% endif %}>Proyectos</a>
                    <a href="{{ path('services') }}" {% if app.request.get('_route') matches '/^services/' %}class="active"{% endif %}>Servicios</a>
                    <a href="{{ path('contact') }}" {% if app.request.get('_route') matches '/^contact/' %}class="active"{% endif %}>Contacto</a>
                </div>
            </nav>

            {% block body %}{% endblock %}

            <footer class="footer">
                <p class="footer-text">&copy; {{ "now" | date("Y") }} InnovaDev. Todos los derechos reservados.</p>

                <nav>
                    <a href="{{ path('legal_notice') }}">Aviso legal</a>
                    <a href="{{ path('privacy_policy') }}">Pol√≠tica de privacidad</a>
                    <a href="{{ path('cookies_policy') }}">Cookies</a>
                </nav>
            </footer>
        </div>
    </body>
</html>